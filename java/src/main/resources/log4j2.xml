<?xml version="1.0" encoding="UTF-8"?>
<Configuration
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://logging.apache.org/xml/ns"
    xsi:schemaLocation="
        https://logging.apache.org/xml/ns
        https://logging.apache.org/xml/ns/log4j-config-3.xsd"
    packages="de.bwaldvogel.log4j"
>

  <Appenders>
    <Console name="console" target="SYSTEM_OUT">
        <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
    </Console>
    <SystemdJournal name="journal" logStacktrace="true" logSource="false" />
  </Appenders>

  <Loggers>
    <Logger name="de.addiks.einsicht" level="INFO"/>
    <Root level="INFO">
      <AppenderRef ref="console"/>
      <AppenderRef ref="journal" />
    </Root>
  </Loggers>

</Configuration>